 <style>
    .btn {
        background-color: #cb0c9f;
    color: #fff;
    }
    .error-messages{
     
     color: red;
     border: 1px red solid;
    border-radius: 20px;
    margin: 20px;
    }

    .error-messages li {
       list-style-type: none; 
    }
 </style>
 <div class="container-fluid py-4">
     
      <div class="row">
        <div class="col-12">
          <div class="card z-index-0">
              <div class="card-header text-center pt-4">
                <h5>New user</h5>
              </div>
             {{#if errors}}
              <div class="error-messages">
                <ul>
                  {{#each errors}}
                    <li>{{msg}}</li>
                  {{/each}}
                </ul>
              </div>
            {{/if}} 
              <div class="card-body">
                <form role="form text-left" action="/user/store" method="post">
                 <div class="row">
                    <div class="mb-3 col-lg-6">
                        <label>full_name:</label>
                    <input type="text" class="form-control" placeholder="Full_name..." aria-label="Title" name="full_name">
                
                  </div>
                  <div class="mb-3 col-lg-6">
                     <label>Email:</label>
                    <input type="email" class="form-control" placeholder="Email..." aria-label="Slug" name="email">
                  </div>
                 </div>
                  
                  <div class="mb-3">
                     <label>password:</label>
                     <input type="password" class="form-control" placeholder="password.." aria-label="Slug" name="password">
                  <h6>role</h6>
                  <div class="form-check ">
                    <input class="form-check-input" type="radio" name="role" value="0" id="flexCheckDefault" checked><p>User</p>
                  </div>
                  <div class="form-check  ">
                    <input class="form-check-input" type="radio" name="role" value="1" id="flexCheckDefault"><p>Admin</p>
                  </div>
                  <div class="form-check  ">
                    <input class="form-check-input" type="radio" name="role" value="2" id="flexCheckDefault"><p>Author</p>
                  </div>
                  
                  <div class="text-center">
                    <button type="submit" class="btn my-4 mb-2" style="">ADD user</button>
                  </div>
                 
                </form>
              </div>
            </div>
        </div>
      </div>
     
    </div>